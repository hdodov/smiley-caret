{
  "manifest_version": 2,
  "name": "Smiley Caret: Text to Emoji",
  "version": "1.1.0",

  "author": "Hristiyan Dodov",
  "description": "Turns emoticons :) to emoji ðŸ™‚ and provides lookup directly in the input field youâ€™re typing in.",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },

  "browser_action": {},

  "permissions": [
    "storage",
    "https://twemoji.maxcdn.com/"
  ],

  "background": {
    "scripts": [
      "main/js/event.js"
    ]
  },

  "content_scripts": [
    {
      "run_at": "document_idle",
      "css": [
        "main/css/style.css"
      ],
      "js": [
        "main/js/content.js"
      ],
      "matches": [
        "file:///*",
        "http://*/*",
        "https://*/*"
      ]
    }
  ],

  "options_page": "options/index.html"
}