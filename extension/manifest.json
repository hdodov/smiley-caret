{
  "manifest_version": 2,
  "name": "Smiley Caret: Text to Emoji",
  "version": "1.0",

  "author": "Hristiyan Dodov",
  "description": "Outputs emoji as you type. Converts shortcodes like ‚Äú:)‚Äù to üôÇ and provides searching directly in the input field you‚Äôre typing in.",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },

  "browser_action": {},

  "permissions": [
    "storage",
    "https://twemoji.maxcdn.com/"
  ],

  "background": {
    "scripts": [
      "data/emoji.js",
      "js/fuse.min.js",
      "js/event.js"
    ]
  },

  "content_scripts": [
    {
      "run_at": "document_idle",
      "css": [
        "css/main.css"
      ],
      "js": [
        "js/twemoji.min.js",
        "js/shortcodes.js",
        "js/script.js"
      ],
      "matches": [
        "file:///*",
        "http://*/*",
        "https://*/*"
      ]
    }
  ],

  "options_page": "options/index.html"
}